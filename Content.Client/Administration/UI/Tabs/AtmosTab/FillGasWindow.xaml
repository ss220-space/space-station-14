<DefaultWindow
    xmlns="https://spacestation14.io" Title="{Loc admin-atmos-actions-window-fill-gas}">
    <BoxContainer Orientation="Vertical">
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc admin-fill-gas-window-grid}" MinSize="100 0" />
            <Control MinSize="50 0" />
            <OptionButton Name="GridOptions" MinSize="100 0" HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc admin-fill-gas-window-gas}" MinSize="100 0" />
            <Control MinSize="50 0" />
            <OptionButton Name="GasOptions" MinSize="100 0" HorizontalExpand="True" />
        </BoxContainer>
        <BoxContainer Orientation="Horizontal">
            <Label Text="{Loc admin-fill-gas-window-amount}" MinSize="100 0" />
            <Control MinSize="50 0" />
            <SpinBox Name="AmountSpin" MinSize="100 0" HorizontalExpand="True" />
        </BoxContainer>
        <Button Name="SubmitButton" Text="{Loc admin-fill-gas-window-fill}" />
    </BoxContainer>
</DefaultWindow>
